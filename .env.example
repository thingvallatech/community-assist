# Community Assist Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://community_user:your_password@localhost:5432/community_assist
POSTGRES_USER=community_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=community_assist
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# For Digital Ocean managed database (uncomment and use instead of above)
# DATABASE_URL=postgresql://user:password@host:25060/community_assist?sslmode=require

# =============================================================================
# APPLICATION
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=change-this-to-a-random-secure-string

# Default language (en or es)
DEFAULT_LANGUAGE=en

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
# Delay between requests (seconds) - be respectful
SCRAPE_DELAY_SECONDS=2.5

# Maximum concurrent HTTP connections
MAX_CONCURRENT_REQUESTS=3

# Maximum depth for breadth-first crawling
MAX_CRAWL_DEPTH=3

# User agent for scraping
USER_AGENT=CommunityAssist/1.0 (https://github.com/thingvallatech/community-assist; social services aggregator)

# Enable/disable scraping tiers
ENABLE_TIER1=true
ENABLE_TIER2=true
ENABLE_TIER3=true

# =============================================================================
# TARGET GEOGRAPHY
# =============================================================================
TARGET_STATE=FL
TARGET_COUNTY=Brevard

# =============================================================================
# EXTERNAL APIS (Optional)
# =============================================================================
# Google Maps API for service locator (optional)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Benefits.gov API (if available)
# BENEFITS_GOV_API_KEY=your-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CALCULATOR=true
ENABLE_LOCATOR=true
ENABLE_PDF_GENERATION=false
ENABLE_CHATBOT=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DEPLOYMENT (Digital Ocean)
# =============================================================================
# Set by DO App Platform automatically
# PORT=8080

# SQL dump for initial data import (optional)
# SQL_DUMP_URL=https://your-storage/dump.sql
